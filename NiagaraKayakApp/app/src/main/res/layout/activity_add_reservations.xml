<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".add_reservations.AddReservationsActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <android.support.v7.widget.CardView
                android:layout_margin="20dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <com.badoualy.stepperindicator.StepperIndicator
                            android:id="@+id/stepper"
                            android:layout_margin="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:stpi_stepCount="3"/>
                    <com.niagarakayak.niagarakayakapp.add_reservations.StepViewPager
                            android:id="@+id/step_viewpager"
                            android:layout_below="@id/stepper"
                            android:layout_width="match_parent"
                            android:layout_height="300dp">
                    </com.niagarakayak.niagarakayakapp.add_reservations.StepViewPager>
                    <Button
                            android:id="@+id/submit_btn"
                            android:layout_below="@id/step_viewpager"
                            android:background="@null"
                            android:text="Submit"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="20dp"
                            android:visibility="invisible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageButton
                            android:id="@+id/continue_done_btn"
                            android:layout_below="@id/step_viewpager"
                            android:background="@null"
                            android:src="@drawable/ic_arrow_forward_white"
                            android:tint="@color/colorPrimary"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="20dp"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                    <ImageButton
                            android:id="@+id/back_btn"
                            android:background="@null"
                            android:src="@drawable/ic_arrow_back_white"
                            android:tint="@color/colorPrimary"
                            android:layout_below="@id/step_viewpager"
                            android:layout_alignBaseline="@id/continue_done_btn"
                            android:layout_margin="20dp"
                            android:visibility="invisible"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                </RelativeLayout>
            </ScrollView>


        </android.support.v7.widget.CardView>

    </RelativeLayout>
</LinearLayout>
