<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:clickable="true"
            android:cursorVisible="false"
            android:drawableRight="@drawable/ic_today_white_24dp"
            android:drawableTint="@color/text_label_drawable_color"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Pick Date" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:cursorVisible="false"
            android:drawableRight="@drawable/ic_alarm_white_24dp"
            android:drawableTint="@color/text_label_drawable_color"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Pick start time" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/hours_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:cursorVisible="false"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_access_time_white_24dp"
            android:drawableTint="@color/text_label_drawable_color"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:hint="# of hours you plan kayaking" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>