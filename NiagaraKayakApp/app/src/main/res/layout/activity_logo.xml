<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:background="@color/colorPrimary"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/nk_logo"
            android:text="TODO: Make logo"
            android:textSize="40sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="100dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/nk_text"
            android:text="Thanks for choosing Niagara Kayak! We first need to know a little about you to get started."
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="80dp"
            android:textAlignment="center"
            android:layout_below="@id/nk_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="Don't worry, the information you provide about yourself will only be stored on this device!"
            android:id="@+id/nk_disclaimer"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:layout_below="@id/nk_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btn_got_it"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Got it!"
            android:layout_below="@id/nk_disclaimer"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>